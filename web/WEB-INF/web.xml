<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 全站参数配置 -->
    <context-param>
        <description>全站编码配置</description>
        <param-name>encode</param-name>
        <param-value>utf-8</param-value>
    </context-param>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <!-- 监听器配置开始 -->
    <listener>
        <listener-class>com.zjn.listener.MyHSessionListener</listener-class>
    </listener>
    <!-- 监听器配置结束 -->
    <!-- 过滤器配置开始 -->
    <filter>
        <description>全站乱码过滤器</description>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>com.zjn.filter.EncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <description>自动登陆过滤器</description>
        <filter-name>AutologinFilter</filter-name>
        <filter-class>com.zjn.filter.AutologinFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutologinFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 过滤器配置结束 -->
    <!-- Servlet配置开始 -->
    <servlet>
        <servlet-name>ValiImg</servlet-name>
        <servlet-class>com.zjn.web.ValiImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>com.zjn.web.RegistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActiveServlet</servlet-name>
        <servlet-class>com.zjn.web.ActiveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zjn.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.zjn.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddprodServlet</servlet-name>
        <servlet-class>com.zjn.web.AddprodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdListServlet</servlet-name>
        <servlet-class>com.zjn.web.ProdListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImgServlet</servlet-name>
        <servlet-class>com.zjn.web.ImgServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdInfoServlet</servlet-name>
        <servlet-class>com.zjn.web.ProdInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.zjn.web.AddCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelCartServlet</servlet-name>
        <servlet-class>com.zjn.web.DelCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeCartServlet</servlet-name>
        <servlet-class>com.zjn.web.ChangeCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClearCartServlet</servlet-name>
        <servlet-class>com.zjn.web.ClearCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderListServlet</servlet-name>
        <servlet-class>com.zjn.web.OrderListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ValiImg</servlet-name>
        <url-pattern>/ValiImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/RegistServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActiveServlet</servlet-name>
        <url-pattern>/ActiveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddprodServlet</servlet-name>
        <url-pattern>/AddprodServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdListServlet</servlet-name>
        <url-pattern>/ProdListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImgServlet</servlet-name>
        <url-pattern>/ImgServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdInfoServlet</servlet-name>
        <url-pattern>/ProdInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/AddCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelCartServlet</servlet-name>
        <url-pattern>/DelCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeCartServlet</servlet-name>
        <url-pattern>/ChangeCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClearCartServlet</servlet-name>
        <url-pattern>/ClearCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/OrderListServlet</url-pattern>
    </servlet-mapping>


</web-app>